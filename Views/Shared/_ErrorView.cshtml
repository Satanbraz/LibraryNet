<!-- _ErrorModal.cshtml -->

@{
    Layout = null;
}
<!DOCTYPE html>
<html>
    <body>
    <hgroup>
        <div class="modal-header">
            <h4 class="modal-title">Error</h4>
        </div>
        <div class="modal-body">
            <p>@ViewBag.ErrorMessage</p>
        </div>
        <div class="modal-footer">
            <button type="button" class="btn btn-default" data-dismiss="modal">Cerrar</button>
        </div>
    </hgroup>
</body>
</html>